<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="@color/colorAccent"></stroke>
            <corners android:bottomRightRadius="@dimen/corner_4dp"
                     android:bottomLeftRadius="@dimen/corner_4dp"
                     android:topRightRadius="@dimen/corner_4dp"
                     android:topLeftRadius="@dimen/corner_4dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPressed"/>
            <stroke android:width="1dp" android:color="@color/colorAccent"></stroke>
            <corners android:bottomRightRadius="@dimen/corner_4dp"
                     android:bottomLeftRadius="@dimen/corner_4dp"
                     android:topRightRadius="@dimen/corner_4dp"
                     android:topLeftRadius="@dimen/corner_4dp"/>
        </shape>
    </item>
</selector>