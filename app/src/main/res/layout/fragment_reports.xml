<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_network"
                android:gravity="center"
                android:visibility="gone"
                android:text="No Network. Check Your Connection"/>



            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/report_layout"
                          android:layout_marginTop="@dimen/margin_24dp"
                          tools:context="com.mobitill.mobitill_2.reports.ReportsFragment">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:elevation="@dimen/elevation_16dp">

                    <!--start show query parameters-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/padding_16dp"
                        android:paddingBottom="@dimen/padding_16dp"
                        >

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_marginRight="@dimen/margin_16dp"
                            card_view:cardCornerRadius="2dp"
                            card_view:cardBackgroundColor="@color/colorCardBackground"
                            card_view:cardElevation="@dimen/elevation_2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/margin_24dp"
                            android:layout_marginBottom="@dimen/margin_24dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                android:textSize="@dimen/report_small_text"
                                android:textColor="@color/colorTextLight"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/from"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/report_large_text"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="---"
                                    android:textColor="@color/colorTextLight"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/to"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/report_large_text"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                        </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_marginRight="@dimen/margin_16dp"
                            card_view:cardCornerRadius="2dp"
                            card_view:cardBackgroundColor="@color/colorCardBackground"
                            card_view:cardElevation="@dimen/elevation_2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/filter_items">

                        </LinearLayout>

                        </android.support.v7.widget.CardView>
                        <!--end show query parameters-->

                        <!--horizontal divider-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorLine"/>

                        <!--start show transactions and total-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/padding_24dp">

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/cv_reports_transactions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="@dimen/margin_8dp"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardBackgroundColor="@color/colorCardBackground"
                                card_view:cardElevation="@dimen/elevation_2dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginTop="@dimen/margin_32dp"
                                        android:layout_marginBottom="@dimen/margin_32dp"
                                        android:gravity="center"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/quantity"
                                            android:textSize="@dimen/report_small_text"
                                            android:textColor="@color/colorTextLight"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/quantity"
                                            android:textColor="@color/colorTextLight"
                                            android:textSize="@dimen/report_large_text"
                                            android:textStyle="bold"
                                            android:text="0"/>
                                    </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <!--vertical divider-->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorLine"/>

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="@dimen/margin_8dp"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardBackgroundColor="@color/colorCardBackground"
                                card_view:cardElevation="@dimen/elevation_2dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_32dp"
                                        android:layout_marginBottom="@dimen/margin_32dp"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/report_small_text"
                                            android:textColor="@color/colorTextLight"
                                            android:text="@string/total"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/report_large_text"
                                            android:textColor="@color/colorTextLight"
                                            android:textStyle="bold"
                                            android:id="@+id/total"
                                            android:text="0"/>
                                    </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <!--end show transactions and total-->

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--Start daily line chart-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:id="@+id/chart_daily_layout"/>
            <!--End daily line chart-->

            <!--Start pie charts-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:id="@+id/chart_layout"/>
            <!--End pie charts-->

            <!--START LINE CHARTS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:id="@+id/line_chart_layout"/>
            <!--END LINE CHARTS-->

        </LinearLayout>


    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:paddingTop="@dimen/padding_8dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>

</FrameLayout>