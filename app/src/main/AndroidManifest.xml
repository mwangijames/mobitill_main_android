<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.mobitill.mobitill_2">

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".MobitillApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".apps.AppsActivity">
        </activity>
        <activity android:name=".reports.ReportsActivity">
        </activity>
        <activity android:name=".products.ProductsActivity">
        </activity>

        <service
            android:name=".sync.AppsJobsService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.action_execute"/>
            </intent-filter>
        </service>

        <receiver
            android:name=".net.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>

        <activity android:name=".cashiers.CashiersActivity">
        </activity>
        <activity android:name=".clients.ClientsActivity">
        </activity>
        <activity android:name=".fleet.FleetActivity">
        </activity>
        <activity
            android:name=".cashiersaddedit.AddEditCashierActivity"
            android:parentActivityName=".cashiers.CashiersActivity">
        </activity>
        <activity
            android:name=".clientsaddedit.ClientAddEditActivity"
            android:parentActivityName=".clients.ClientsActivity">
        </activity>
        <activity
            android:name=".fleetaddedit.FleetAddEditActivity"
            android:parentActivityName=".fleet.FleetActivity">
        </activity>
        <activity
            android:name=".productsaddedit.ProductAddEditActivity"
            android:parentActivityName=".products.ProductsActivity">
        </activity>
        <activity
            android:name=".cashiersdetail.CashierDetailActivity"
            android:parentActivityName=".cashiers.CashiersActivity">
        </activity>
        <activity
            android:name=".clientsdetail.ClientsDetailActivity"
            android:parentActivityName=".clients.ClientsActivity">
        </activity>
        <activity android:name=".fleetdetail.FleetDetailActivity">
        </activity>
        <activity
            android:name=".menu.MenuActivity"
            android:parentActivityName=".apps.AppsActivity">
        </activity>

        <service android:name=".sync.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>
        <service
            android:name=".sync.SyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter"/>
        </service>

        <provider
            android:name=".sync.StubProvider"
            android:authorities="com.mobitill.mobitill_2.provider"
            android:exported="false"
            android:syncable="true"/>

        <activity android:name=".components.showall.ShowAllActivity"
            android:parentActivityName=".menu.MenuActivity">
        </activity>
    </application>

</manifest>